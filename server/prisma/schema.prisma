datasource postgres {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  posts     Post[]
  roles     String[]
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model Post {
  content   String?
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  likes     Int?
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}